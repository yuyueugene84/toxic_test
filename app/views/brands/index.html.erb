<% @brands.each do |brand| %>
  <tr>
    <td><%= brand.Brand_ID %></td>
    <td><%= brand.Brand_name %></td>
    <td><%= brand.Brand_cname %></td>
    <td><%= link_to '查詢', brand_path(brand) %></td>
    <td><%= link_to '編輯', edit_brand_path(brand) %></td>
    <td><%= link_to '刪除', brand_path(brand), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

